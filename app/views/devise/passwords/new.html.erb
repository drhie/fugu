<div class="center-box center-text">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "e.g., #{@email}", autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
    </div>

    <div class="devise-options">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>

<div class="center-box center-text">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "devise"}) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "e.g., #{@email}", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder: "e.g., ********", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="remember-check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-default" %>
    </div>

    <div class="devise-options">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>
